<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/followers_portrait"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/followers_username"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:gravity="center"
            android:text="wangpei"
            android:textSize="20sp"
            android:layout_marginStart="24dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/followers_portrait"
            android:layout_toEndOf="@+id/followers_portrait" />

        <Button
            android:id="@+id/followers_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="followingUser"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/followers_username" />
    </RelativeLayout>

</LinearLayout>